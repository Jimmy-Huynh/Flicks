<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/layout_item_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/base_8">

        <ImageView
            android:id="@+id/iv_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/base_160"
            android:minHeight="@dimen/base_160" />

        <ImageView
            android:id="@+id/iv_icon_over"
            android:layout_width="@dimen/base_48"
            android:layout_height="@dimen/base_48"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/play_icon" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_description"
        android:layout_width="@dimen/base_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold"
            tool:text="Title" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="6"
            android:textSize="@dimen/text_size_16"
            tool:text="This is content of film. This is content of film. This is content of film. This is content of film. This is content of film. " />
    </LinearLayout>
</LinearLayout>